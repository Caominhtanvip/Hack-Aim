-- Dịch vụ Roblox
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local CurrentCamera = Workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

-- Menu Settings
local menuOpen = false -- Mặc định menu sẽ đóng
local FOV = 100 -- Kích thước vòng FOV
local ESP_COLOR = Color3.fromRGB(0, 255, 0) -- Màu của ESP

-- Drawing objects
local FOVring = Drawing.new("Circle") -- Tạo vòng FOV
local ESPTable = {} -- Bảng chứa ESP của các người chơi

-- Cấu hình vòng FOV
FOVring.Visible = true
FOVring.Thickness = 2
FOVring.Color = Color3.fromRGB(128, 0, 128)
FOVring.Filled = false
FOVring.Radius = FOV
FOVring.Position = CurrentCamera.ViewportSize / 2

-- Hàm Anti-Ban: Ẩn tất cả các đối tượng (FOVring và ESP)
local function hideAntiBanElements()
    -- Ẩn vòng FOV
    FOVring.Visible = false

    -- Ẩn tất cả các ESP trong bảng ESPTable
    for _, espBox in pairs(ESPTable) do
        if espBox and espBox.Visible ~= nil then
            espBox.Visible = false
        end
    end
end

-- Hàm Hiển thị: Hiển thị các đối tượng (FOVring và ESP) khi menu bật
local function showAntiBanElements()
    -- Hiển thị vòng FOV
    FOVring.Visible = menuOpen

    -- Hiển thị lại ESP nếu menu đang mở
    for _, espBox in pairs(ESPTable) do
        if espBox and espBox.Visible ~= nil then
            espBox.Visible = menuOpen
        end
    end
end

-- Toggle Menu (Bật/tắt menu bằng phím Insert)
local function toggleMenu()
    menuOpen = not menuOpen
    if menuOpen then
        -- Hiển thị các đối tượng khi menu bật
        showAntiBanElements()
        print("Menu Opened")
    else
        -- Ẩn các đối tượng khi menu tắt
        hideAntiBanElements()
        print("Menu Closed")
    end
end

-- Tạo ESP cho một người chơi
local function createESP(player)
    if player == LocalPlayer then return end -- Không tạo ESP cho chính mình

    -- Tạo một hình vuông (Square) để làm ESP
    local espBox = Drawing.new("Square")
    espBox.Visible = false
    espBox.Color = ESP_COLOR
    espBox.Thickness = 2
    espBox.Filled = false
    ESPTable[player] = espBox -- Lưu ESP vào bảng ESPTable

    -- Theo dõi vị trí của ESP trong mỗi frame
    RunService.RenderStepped:Connect(function()
        if player.Character and player.Character:FindFirstChild("Head") then
            local head = player.Character.Head
            local screenPos, onScreen = CurrentCamera:WorldToViewportPoint(head.Position)

            if onScreen and menuOpen then -- Chỉ hiển thị ESP khi người chơi nằm trong màn hình và menu bật
                espBox.Visible = true
                espBox.Size = Vector2.new(50, 50) -- Kích thước của ESP
                espBox.Position = Vector2.new(screenPos.X - 50 / 2, screenPos.Y - 50 / 2) -- Căn giữa ESP
            else
                espBox.Visible = false
            end
        else
            espBox.Visible = false
        end
    end)
end

-- Tìm người chơi gần nhất trong vòng FOV
local function getClosestPlayerInFOV()
    local closestPlayer = nil
    local shortestDistance = math.huge

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
            local head = player.Character.Head
            local screenPos, onScreen = CurrentCamera:WorldToViewportPoint(head.Position)
            local distance = (Vector2.new(screenPos.X, screenPos.Y) - FOVring.Position).Magnitude

            if onScreen and distance < FOV and distance < shortestDistance then
                closestPlayer = player
                shortestDistance = distance
            end
        end
    end

    return closestPlayer
end

-- Sử dụng Raycast để kiểm tra xem có thể bắn xuyên vật thể hay không
local function canShootThrough(targetPosition)
    local ray = Ray.new(CurrentCamera.CFrame.Position, (targetPosition - CurrentCamera.CFrame.Position).unit * 500)
    local hit, position = Workspace:FindPartOnRay(ray, LocalPlayer.Character, false, true)
    return hit == nil or hit.Parent == targetPosition.Parent
end

-- Áp dụng Silent Aim
local function applySilentAim()
    local target = getClosestPlayerInFOV()
    if target and target.Character and target.Character:FindFirstChild("Head") then
        local headPosition = target.Character.Head.Position

        -- Kiểm tra xem ray có thể bắn xuyên vật thể hay không
        if canShootThrough(headPosition) then
            -- Điều chỉnh hướng camera để bắn vào đầu mục tiêu
            CurrentCamera.CFrame = CFrame.new(CurrentCamera.CFrame.Position, headPosition)
        end
    end
end

-- Kích hoạt Silent Aim khi nhấn chuột trái
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        if menuOpen then
            applySilentAim() -- Kích hoạt Silent Aim khi menu mở
        end
    end
end)

-- Cập nhật vòng FOV trong mỗi frame
RunService.RenderStepped:Connect(function()
    FOVring.Position = CurrentCamera.ViewportSize / 2 -- Đặt vòng FOV ở giữa màn hình
end)

-- Đóng/mở menu khi nhấn phím Insert
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.Insert then -- Nhấn Insert để bật/tắt menu
        toggleMenu()
    end
end)

-- Tạo ESP khi người chơi mới tham gia
local function onPlayerAdded(player)
    player.CharacterAdded:Connect(function(character)
        createESP(player)
    end)
end

-- Tạo ESP cho tất cả người chơi hiện có
for _, player in ipairs(Players:GetPlayers()) do
    if player ~= LocalPlayer then
        if player.Character then
            createESP(player)
        end
        player.CharacterAdded:Connect(function(character)
            createESP(player)
        end)
    end
end

Players.PlayerAdded:Connect(onPlayerAdded)

-- Anti-Ban: Mặc định ẩn các đối tượng khi bắt đầu
hideAntiBanElements()
